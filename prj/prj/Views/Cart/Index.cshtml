@model List<prj.Models.CartItem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Product</th>
                <th style="width:10%">Price</th>
                <th style="width:8%">Quantity</th>
                <th style="width:22%" class="text-center">Subtotal</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {



                    foreach (var item in Model)
                    {
                        <tr>
                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-sm-2 hidden-xs"><img src="~/Assets/images/products/@item.Product.thumbnail.Trim()" alt="..." class="img-responsive" /></div>
                                    <div class="col-sm-10">
                                        <h4 class="nomargin">@item.Product.productName</h4>
                                        <p>@item.Product.description.Substring(0,item.Product.description.Length>100?100: item.Product.description.Length / 2)...</p>
                                    </div>

                                </div>
                            </td>
                            <td data-th="Price">@item.Product.unitPrice.Value.ToString("N0")</td>
                            <td data-th="Quantity">
                                <input type="number" class="form-control text-center" value="@item.quantity">
                            </td>
                            <td data-th="Subtotal" class="text-center">
                                
                                @{ 
                                    var subprice=((long)item.Product.unitPrice * (long)item.quantity).ToString("N0");
                                }
                                <p>@subprice</p>
                            </td>
                            <td class="actions" data-th="">
                                <button class="btn btn-info btn-sm"><i class="fa fa-refresh">Refresh</i></button>
                                <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o">Delete</i></button>
                            </td>
                            
                                
                            
                        </tr>
                        }
                    }
                }


        </tbody>
        <tfoot>
            <tr class="visible-xs">
                <td class="text-center"><strong>Total 1.99</strong></td>
            </tr>
            <tr>
                <td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Total $1.99</strong></td>
                <td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
            </tr>
        </tfoot>
    </table>
</div>